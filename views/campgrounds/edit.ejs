<h1>Edit Form</h1>

<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Campground Name</label>
                    <input  id="name" class="form-control" type="text" name="campground[name]" 
                    value="<%= campground.name %>">        
                </div>
                <div class="form-group">
                    <label for="image">Campground Image</label>
                    <input id="image" class="form-control" type="file" name="image" accept="image/*" 
                    value="<%= campground.image %>" required>        
                </div>
                <div class="form-group">
                    <label for="price">Campground Price</label>
                    <input id="price" class="form-control" type="number" name="campground[price]" 
                    value="<%= campground.price %>" min="0.01" step="0.01">        
                </div>
                <div class="form-group">
                    <label for="description">Campground Description</label>
                    <input id="description"class="form-control" type="text" name="campground[description]" 
                    value="<%= campground.description %>" col="6" row="4">        
                </div>
                <div class="form-group">
                    <label for="search_term">Campground Location</label>
                    <input id="search_term" class="form-control" type="text" name="campground[location]" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>        
                </div>
        </form>    
        <a href="/campgrounds">Go Back</a>
        </div>
    </div>
    
<script>
function activatePlacesSearch() {
    var input = document.getElementById('search_term');
    var autocomplete = new google.maps.places.Autocomplete(input);
}
</script>

<!--autocomplete = new google.maps.places.Autocomplete(input, options);    -->
    
    
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDlRksocefopVbi2KSj00IozgdCAs-kI8Y&libraries=places&callback=activatePlacesSearch"></script>

 
